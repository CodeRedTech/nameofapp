<div class="pull-right">
  <%= link_to 'Edit', edit_product_path(@product), class: "btn btn-default" %>
  <%= link_to 'Back', products_path, class: "btn btn-default" %>
</div>

<h1>
  <%= @product.name %>
</h1>

<strong><%= number_to_currency(@product.price) %></strong>
<p><%= @product.description %></p>

<%= image_tag(@product.image_url, class: "img-responsive img-zoom", data_zoom_image: "@product.image_url") %>

<br>

<%= form_with(url: '/payments/create') do |form| %>
  <%= hidden_field_tag(:product_id, @product.id) %>
  <%= render partial: "shared/stripe_checkout_button" %>
<% end %>

<hr>

<p>Rating: <div class="rated" data-score="<%= @product.average_rating %>"></div> </p>
<%= @product.highest_rating_comment %>
<%= @product.lowest_rating_comment %>

<%= render 'new_comment' %>
<%= render 'comments' %>
<br>

